{
  "presets": ["react", "es2015"],
  "plugins": ["syntax-async-functions", "syntax-class-properties", "syntax-object-rest-spread", "transform-regenerator", "transform-class-properties", "transform-object-rest-spread"],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }]
      ]
    }
  }
}
